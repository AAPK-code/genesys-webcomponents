{
  "name": "@genesys/common-webcomponents",
  "version": "0.1.0",
  "description": "Common webcomponents",
  "module": "dist/esm/index.js",
  "main": "dist/index.js",
  "types": "dist/types/components.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "npm run i18n && npm run stencil && npm run storybook",
    "commit": "git-cz",
    "release": "standard-version",
    "stencil": "stencil build --docs --prod",
    "stencil.dev": "stencil build --dev --watch --es5 --docs",
    "test.unit": "stencil test --spec",
    "test.e2e": "stencil test --e2e",
    "test.screenshot": "stencil test --e2e --screenshot",
    "test": "stencil test --spec --e2e",
    "test.watch": "stencil test --spec --e2e --watchAll",
    "storybook": "./node_modules/.bin/build-storybook -c .storybook -s ./www,./src/style,./dist -o .out",
    "storybook.dev": "./node_modules/.bin/start-storybook -p 9001 -c .storybook -s ./www,./src/style,./dist",
    "create-component": "node scripts/create-component.js",
    "dev": "stencil build --dev --es5 && ./node_modules/.bin/concurrently  \"npm run stencil.dev\" \"npm run storybook.dev\"",
    "format": "prettier ./src/**/*.ts ./src/**/*.tsx",
    "format.fix": "npm run format -- --write",
    "lint": "npm run lint.commit && npm run lint.ts",
    "lint.fix": "npm run lint.ts -- --fix",
    "lint.ts": "tslint --project .",
    "lint.commit": "commitlint -f d3ce2e89721467e25922f923863ea3da9579bc73",
    "i18n": "node scripts/build-i18n.js"
  },
  "dependencies": {
    "intl-messageformat": "^2.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "@stencil/core": "^0.18.1",
    "@stencil/less": "^0.1.0",
    "@stencil/utils": "0.0.5",
    "@stencil/webpack": "0.0.6",
    "@storybook/addon-a11y": "^5.0.3",
    "@storybook/addon-actions": "5.0.3",
    "@storybook/addon-backgrounds": "5.0.3",
    "@storybook/addon-knobs": "5.0.3",
    "@storybook/addon-links": "5.0.3",
    "@storybook/addon-notes": "5.0.3",
    "@storybook/addon-storysource": "5.0.3",
    "@storybook/addon-viewport": "5.0.3",
    "@storybook/addons": "5.0.3",
    "@storybook/cli": "^5.0.3",
    "@storybook/html": "^5.0.3",
    "@storybook/polymer": "5.0.3",
    "@types/jest": "23.3.5",
    "@types/puppeteer": "1.6.4",
    "babel-core": "6.26.3",
    "babel-loader": "7.1.5",
    "babel-preset-env": "1.7.0",
    "commitizen": "^3.0.7",
    "concurrently": "^4.0.1",
    "cz-conventional-changelog": "^2.1.0",
    "glob": "^7.1.3",
    "handlebars": "^4.0.11",
    "html-loader": "^0.5.5",
    "husky": "^1.3.1",
    "inquirer": "^6.2.0",
    "jest": "23.6.0",
    "jest-cli": "23.6.0",
    "jest-environment-node": "23.4.0",
    "jest-junit": "^5.2.0",
    "lint-staged": "^8.1.5",
    "lit-html": "^0.10.2",
    "markdown-loader": "^4.0.0",
    "moment": "^2.22.2",
    "pixelmatch": "4.0.2",
    "polymer-webpack-loader": "^2.0.3",
    "prettier": "^1.14.3",
    "puppeteer": "1.8.0",
    "standard-version": "^5.0.1",
    "storybook-readme": "^5.0.1",
    "ts-loader": "^5.3.0",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.15.0",
    "typedoc": "^0.13.0",
    "webpack": "^4.26.1",
    "webpack-dev-server": "^3.1.6",
    "workbox-build": "3.4.1"
  },
  "repository": {
    "type": "git",
    "url": "git+bitbucket.org:inindca/genesys-webcomponents.git"
  },
  "optionalDependencies": {
    "@purecloud/web-app-deploy": "^5.2.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": ["prettier --write", "git add"]
  }
}
